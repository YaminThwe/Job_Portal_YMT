<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tuhmawbi.jobportal_ymt.activities.LoginActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />


    <Button
        android:id="@+id/btnLoginWithPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/background"
        android:drawableLeft="@drawable/ic_call_white_24dp"
        android:padding="20dp"
        android:text="Sign in with Phone number"
        android:textAllCaps="false"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/btnLoginWithFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginWithPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/background"
        android:drawableLeft="@drawable/facebooklogo"
        android:padding="20dp"
        android:text="Sign in with Facebook"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnLoginWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginWithFB"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/background"
        android:drawableLeft="@drawable/google_logo"
        android:padding="20dp"
        android:text="Sign in with Google"
        android:textAllCaps="false"
        android:textSize="18sp" />


</RelativeLayout>
